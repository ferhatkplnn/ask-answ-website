extends layouts/layout.pug

block content
    div.text-center.container-fluid(style="min-height: 400px")
        if mailError
            .alert.alert-warning.alert-dismissible.fade.show(role="alert")
                strong= mailError
                button.btn-close(type="button" data-bs-dismiss="alert" aria-label="Close")

        main.col-sm-6.col-md-4.col-12.m-auto.my-5
            form(action="/auth/forgotpassword" method="POST")
                h1.h3.mb-5.fw-normal Reset password
                .form-floating
                    input#email.form-control(type="email" placeholder="name@example.com" name="email" required)
                    label(for="email") Email address
                    br
                button.w-100.btn.btn-lg.btn-primary(type="submit") Reset password

