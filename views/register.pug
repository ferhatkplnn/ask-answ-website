extends layouts/layout.pug

block content
    div.text-center.container-fluid(style="min-height: 400px")
        if mailError
            .alert.alert-warning.alert-dismissible.fade.show(role="alert")
                strong= mailError
                button.btn-close(type="button" data-bs-dismiss="alert" aria-label="Close")

        main.col-sm-6.col-md-4.col-12.m-auto.my-5
            form(action="/auth/register" method="POST")
                h1.h3.mb-5.fw-normal Sing-up
                .form-floating
                    input#name.form-control(type="text" placeholder="Name" name="name" required)
                    label(for="name") Name
                .form-floating
                    input#email.form-control(type="email" placeholder="name@example.com" name="email" required)
                    label(for="email") Email address
                .form-floating
                    input#passwod.form-control(type="password" placeholder="Password" name="password" minlength="6" maxlength="20" required)
                    label(for="password") Password
                .checkbox.mb-3
                    label
                        input(type="checkbox" value="remember-me")
                        | Remember me
                button.w-100.btn.btn-lg.btn-primary(type="submit") Sign up

